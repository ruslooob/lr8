{% extends 'base.html.twig' %}

{% block title %}Регистрация нового пользователя{% endblock %}

{% block body %}
{#    {{ include('components/header.html.twig') }}#}

    <div class="container">
        <h1>Регистрация пользователя</h1>

        {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.login) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.password, {
            label: 'Password'
        }) }}
        {{ form_row(registrationForm.phone) }}
        {{ form_row(registrationForm.agreeTerms) }}

        <div class="row d-flex align-items-center">
            <button class="btn btn-lg btn-primary mt-2" type="submit">Зарегистрироваться</button>
            <a class="btn btn-lg btn-secondary mt-2 ml-4" href="{{ path('app_login') }}">Авторизация</a>
        </div>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}